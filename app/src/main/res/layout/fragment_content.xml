<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F6F6F6"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.viewpagerindicator.TabPageIndicator
            android:id="@+id/viewpage_indicator"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_background_line"/>
        <ImageView
            android:id="@+id/image_add_channel_cf"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="4dp"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_tbar_add"
            android:background="@drawable/shadow_add_titlebar_new"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>